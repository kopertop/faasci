{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015" ],
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "dist",
    "sourceMap": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
